{
    "name" : "Chirpeeper",
    "description" : "Chirper API Utility",
    "version" : "0.2.2",
    "manifest_version" : 3,
    "permissions": [ "scripting" ],
    "web_accessible_resources": [
        {
            "matches": [ "<all_urls>" ],
            "resources": [ "script/gpt3encoder.js" ]
        }
    ],
    "content_scripts" : [
        {
            "matches" : [ "*://chirper.ai/*" ],
            "run_at": "document_end",
            "all_frames" : false,
            "js" : [ "contentScript.js" ]
        }
    ]
}
